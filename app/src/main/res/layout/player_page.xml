<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="teamName"
            type="String" />
        <variable
            name="player"
            type="com.zgsbrgr.demo.fiba.domain.Player" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_30"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@{teamName}"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SLOVENIA" />


        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_30"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_30"
            app:layout_constraintEnd_toEndOf="@id/guideline_horizontal_30"
            app:layout_constraintStart_toStartOf="@id/guideline_horizontal_30"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal_30" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:letterSpacing="0"
            android:lineSpacingExtra="3dp"
            android:text="@{player.player}"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:autoSizeMaxTextSize="33sp"
            app:autoSizeMinTextSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_50"
            app:layout_constraintTop_toTopOf="@id/profile_img"
            tools:text="LUKA\nDONCIC" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/player_name"
            app:layout_constraintEnd_toEndOf="@id/player_name"
            app:layout_constraintStart_toStartOf="@id/player_name"
            app:playerPosition="@{player.playedPosition}"
            tools:text="#77 | PG" />

        <TextView
            android:id="@+id/ppg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ppg_value"
            app:layout_constraintEnd_toEndOf="@id/ppg_value"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_30"
            tools:text="PPG"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            android:text="@string/ppg"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/ppg_value"
            app:layout_constraintEnd_toStartOf="@id/rpg_value"
            app:layout_constraintTop_toTopOf="@id/apg"
            app:layout_constraintBottom_toBottomOf="@id/apg_value"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/rpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rpg_value"
            app:layout_constraintEnd_toEndOf="@id/rpg_value"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_30"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            android:text="@string/rpg"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/rpg_value"
            app:layout_constraintEnd_toStartOf="@id/apg_value"
            app:layout_constraintTop_toTopOf="@id/rpg"
            app:layout_constraintBottom_toBottomOf="@id/rpg_value"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/apg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/apg_value"
            app:layout_constraintEnd_toEndOf="@id/apg_value"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_30"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            android:text="@string/apg"

            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/apg_value"
            app:layout_constraintEnd_toStartOf="@id/pie_value"
            app:layout_constraintTop_toTopOf="@id/pie"
            app:layout_constraintBottom_toBottomOf="@id/pie_value"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/pie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/pie_value"
            app:layout_constraintEnd_toEndOf="@id/pie_value"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_30"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            android:text="@string/eff"
            />
        <TextView
            android:id="@+id/ppg_value"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ppg"
            app:layout_constraintBottom_toTopOf="@id/player_value_divider"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginStart="50dp"
            tools:text="24.8"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:alpha="0.9"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:formatPlayerStat="@{player.pointsAvg}"
            />

        <TextView
            android:id="@+id/rpg_value"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/ppg"
            app:layout_constraintEnd_toStartOf="@id/apg"
            app:layout_constraintTop_toBottomOf="@id/rpg"
            app:layout_constraintBottom_toTopOf="@id/player_value_divider"
            tools:text="5.8"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:alpha="0.9"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:formatPlayerStat="@{player.reboundsAvg}"
            />

        <TextView
            android:id="@+id/apg_value"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/rpg"
            app:layout_constraintEnd_toStartOf="@id/pie"
            app:layout_constraintTop_toBottomOf="@id/rpg"
            app:layout_constraintBottom_toTopOf="@id/player_value_divider"
            tools:text="25.8"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:alpha="0.9"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:formatPlayerStat="@{player.assistsAvg}"
            />

        <TextView
            android:id="@+id/pie_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/pie"
            app:layout_constraintBottom_toTopOf="@id/player_value_divider"
            tools:text="25.8"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:alpha="0.9"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:formatPlayerStat="@{player.efficiency}"
            />

        <View
            android:id="@+id/player_value_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_30"
            android:layout_marginTop="100dp"
            android:alpha="0.5"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>